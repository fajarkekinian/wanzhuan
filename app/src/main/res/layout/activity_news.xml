<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:paddingBottom="@dimen/title_bar_padding"
        android:paddingTop="@dimen/title_bar_padding">
        <ImageView
            android:paddingLeft="@dimen/nomal_padding"
            android:paddingRight="@dimen/nomal_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arr_l"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        >
    <LinearLayout
        android:paddingLeft="@dimen/nomal_padding"
        android:paddingRight="@dimen/nomal_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/nomal_padding"
        android:background="@drawable/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="@dimen/large_font"
            android:paddingBottom="@dimen/nomal_padding"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:id="@+id/from"
            android:textSize="@dimen/samm_font"
            />
        <TextView
            android:layout_alignBottom="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/from"
            android:id="@+id/date"
            android:text="test"
            android:textSize="@dimen/samm_font"
            android:textColor="#fe515155" />
    </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/nomal_padding"
            android:padding="@dimen/nomal_padding"
            android:layout_width="match_parent"
            android:background="@drawable/summery_bg"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/samm_font"
                android:padding="@dimen/too_small_padding"
                android:background="@drawable/blue_radius_bg"
                android:text="@string/summery"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summery"
                />
        </LinearLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:padding="@dimen/nomal_padding"
    android:layout_height="match_parent">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:id="@+id/img"
       android:src="@drawable/ttt"
       android:layout_marginRight="@dimen/nomal_padding"
        android:layout_alignBottom="@+id/news_info"
       android:layout_alignTop="@+id/news_info"
       />
    <LinearLayout

        android:id="@+id/news_info"
        android:layout_toRightOf="@+id/img"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"

        />
    </LinearLayout>
</RelativeLayout>